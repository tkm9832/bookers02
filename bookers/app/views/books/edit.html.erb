<h1>Editing Book</h1>
<%= form_with model: @book, url:update_book_path(@book.id), method: :patch do |f| %>

<% if @book.errors.any? %>
<div>
 <%= flash[:alert] %>
</div>
 <ul>
  <% @book.errors.full_messages.each do |message| %>
   <li><%= message %></li>
  <% end %>
 </ul>
<% end %>

 <h4>Title</h4>
 <%= f.text_field :title %>

 <h4>Body</h4>
 <%= f.text_area :body %>

 <%= f.submit 'Update Book' %>

<% end %>
<%= link_to "Show", book_path(@book.id) %>
<%= link_to books_path do %><p>Back</p>
<% end %>



